/* 顶部搜索条 */

.search-bar {
  width: 100%;
  height: 44px;
  position: fixed;
  top: 0px;
  z-index: 9999;
}

.search-bar.fixed {
  background-color: #e43130;
}

.search-bar .category, .search-bar .login {
  height: 44px;
  width: 50px;
}

.search-bar .category .icon-category {
  margin: 14px 0 0 15px;
  width: 20px;
  height: 18px;
  display: block;
  background: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAACgAAAAgAgMAAAAdw9KTAAAABGdBTUEAALGPC/xhBQAAAAFzUkdCAK7OHOkAAAAMUExURUdwTP///////////waf0AoAAAADdFJOUwDjSYAlncUAAAAbSURBVBjTY5j/Hwq+MdTDmH+RmUgK6AuGhcsAU5tyB6Ji+x0AAAAASUVORK5CYII=);
  background-size: 100% 100%;
}

.search-bar .input {
  padding-top: 7px;
}

.search-bar .input input {
  height: 30px;
  width: 100%;
  padding-left: 40px;
  box-sizing: border-box;
  font-size: 12px;
  background-color: #fff;
  border-radius: 15px;
  position: relative;
}

.search-bar .input .icon-jd {
  display: block;
  width: 20px;
  height: 15px;
  background: url(data:image/png;base64,) no-repeat;
  background-size: 20px 15px;
  margin: 8px 8px 0 15px;
  position: absolute;
  z-index: 1;
  float: left;
}

.search-bar .login {
  text-align: center;
  line-height: 44px;
  color: #fff;
}

/*  轮播样式  */

swiper image {
